@{
    ViewData["Title"] = "Games";
}

<div class="wrapper">
    <h1>Matchmaking</h1>
    <a asp-action="NewGame" asp-controller="Rallypoint">
        <button class="uk-button uk-button-default">Add Game</button>
    </a>
    <a href="/games/scoreboard"><button class="uk-button uk-button-default">Global Scoreboard</button></a>
    <hr>
    <h3>Scheduled Matches</h3>
        <div class="uk-child-width-1-4@m uk-grid-small uk-grid-match" uk-grid>
            @foreach(var game in ViewBag.userGames){
            <div class="uk-card uk-card-default uk-card-body">
                
                <p class="uk-card-title">@game.playeroneUsername vs. @game.playertwoUsername</p>
                <p>@game.date</p>
                <p>Location: @game.address</p>
                
                <form asp-controller="Rallypoint" asp-action="DeleteGame" asp-route-Id="@game.Id"><button class="uk-button uk-button-danger uk-margin">Delete</button></form>
                <a href="/gameinfo/@game.Id"><button class="uk-button uk-button-default uk-margin">View</button></a>
            </div>
            }
        </div>
    <hr>
    <h2>Find a Match</h2>
        <div class="uk-child-width-1-4@m uk-grid-small uk-grid-match" uk-grid>
            @foreach(var game in ViewBag.availableGames){
            <div class="uk-card uk-card-default">
                <div class="uk-card-body">
                    <p class="uk-card-title">Opponent: @game.playeroneUsername @game.playertwoUsername</p>
                    <p>@game.date</p>
                    <p>Location: @game.address</p>
                </div>
                <form asp-controller="Rallypoint" asp-action="JoinGame" asp-route-GameId="@game.Id" asp-route-join="true"><button class="uk-button uk-button-primary uk-margin">Join</button></form>
                <form asp-controller="Rallypoint" asp-action="DeleteGame" asp-route-Id="@game.Id"><button class="uk-button uk-button-danger uk-margin">Delete</button></form>
            </div>
            }
        </div>
    <hr>
</div>