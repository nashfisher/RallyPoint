<div style="text-align: center">

    <h1>@ViewBag.User.username</h1>
    @{
    @if(@ViewBag.User.imagelink == null){
        <h3>If you want a Profile Picture, please submit an image link! (Any image considered Offensive will be removed and result in a banned account.)</h3>
    }
    else{
        <img id="profilepic" src="@ViewBag.User.imagelink" alt="profile image">

        }   
    }

    <form action="/upload" method="Post">
        <input type="text" name="link">
        <input type="submit" value="submit">

    </form>
    <div id="stats">
       <h4 class="stuff"> Wins: @ViewBag.User.wins</h4>
        <h4 class="stuff"> Losses: @ViewBag.User.losses</h4>
        <h4 class="stuff"> Games Joined: @ViewBag.User.gamesjoined.Count</h4> 
    </div>
    
</div>