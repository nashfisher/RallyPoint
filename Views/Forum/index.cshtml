@{
 Layout = "~/Views/Shared/_ForumLayout.cshtml";
}

<div class="wrapper">
        <div style="display: inline-block;">
            <p>Channels</p>
            <ul class="uk-breadcrumb">
                <li><a href="">Pro</a></li>
                <li><a href="">All</a></li>
                <li><a href="">Noob</a></li>
            </ul>
        </div>
        <div class="uk-panel uk-margin-medium" style="text-align: right; display: inline-block; float: right;" id="forum-toolbar">
            <div>
                <a class="uk-button uk-button-default" href="forum/create"><span class="uk-icon uk-margin-small-right" uk-icon="icon: plus; ratio: 1"></span>Create Post</a>
            </div>
        </div>
        <div class="uk-panel uk-margin-medium">
            <h3 class="categories">Posts</h3>
        </div>
        <hr class="uk-divider-icon">
        <div class="uk-overflow-auto">
            <table class="uk-table uk-table-hover uk-table-middle uk-table-divider">
                <thead>
                    <tr>
                        <th class="uk-table-shrink">Votes</th>
                        <th class="uk-table-shrink">User</th>
                        <th class="uk-width-medium">Title</th>
                        <th class="uk-table-medium">Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var post in @ViewBag.RecentPost)
                    {
                        <tr>
                            <div>
                                <td>
                                @{
                                    int postlike = 0;
                                    string upcolor = "orange";
                                    string downcolor = "blue";
                                    @foreach(var likes in @post.likedpost)
                                    {
                                        if(likes.liked == null)
                                        {
                                            break;
                                        }
                                        else if(likes.liked)
                                        {
                                            postlike += 1;
                                        }
                                        else if(!likes.liked)
                                        {
                                            postlike -= 1;
                                        }
                                    }
                                    @if(@post.likedpost.Count == 0)
                                    {
                                        upcolor = "black";
                                        downcolor = "black";
                                    }
                                    else
                                    {
                                        @switch (@post.likedpost[0].liked)
                                        {
                                            case null:
                                                upcolor = "black";
                                                downcolor = "black";
                                                break;
                                            case true:
                                                downcolor = "black";
                                                upcolor = "orange";
                                                break;
                                            case false:
                                                upcolor = "black";
                                                downcolor = "blue";
                                                break;
                                        }
                                    }
                                    <p class="votecount">@postlike</p>
                                    <div>
                                        <form style="display: block;" class="LDbutton" asp-controller="Forum" asp-action="LikePost" asp-route-like="TRUE" asp-route-postID="@post.Id" asp-route-routeID="index"><button class="votearrow"><i style="color: @upcolor;" class="fas fa-arrow-circle-up"></i></button></form>
                                        <form style="display: block;" class="LDbutton" asp-controller="Forum" asp-action="LikePost" asp-route-like="FALSE" asp-route-postID="@post.Id" asp-route-routeID="index"><button class="votearrow"><i style="color: @downcolor;" class="fas fa-arrow-circle-down"></i></button></form>
                                    </div>
                                }
                                </td>
                            </div>
                            <td><img class="uk-preserve-width uk-border-circle" src="@ViewBag.CurrentUser.imagelink" width="40" alt="profile pic"><a href="/profile/@post.user.username"><p class="post-data"><span style="display: contents;" class="uk-icon uk-margin-small-right" uk-icon="icon: user; ratio: .5"></span>@post.user.username</p></a></td>
                            <td class="uk-table-link">
                                <a class="uk-link-reset" href="forum/post/@post.Id">@post.title</a>
                            </td>
                            <td class="uk-text-truncate">@post.post</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>